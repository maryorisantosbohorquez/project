<Window x:Class="ProjectReport.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PROJECT REPORT MANAGER"
        Height="650"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Definición de filas: menú arriba, contenido abajo -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>   <!-- Barra superior -->
            <RowDefinition Height="*"/>    <!-- Contenido dinámico -->
        </Grid.RowDefinitions>

        <!-- ============================
             BARRA SUPERIOR / MENÚ
        ==============================-->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Background="#EE7E32"
                    VerticalAlignment="Center"
                    Margin="10">  <!-- Reemplazado Padding por Margin -->

            <Button Content="Home"
                    Click="HomeButton_Click"
                    Margin="5"
                    Padding="15,5"
                    Background="White"
                    Foreground="Black"/>

            <Button Content="Well Data"
                    Click="WellDataButton_Click"
                    Margin="5"
                    Padding="15,5"
                    Background="White"
                    Foreground="Black"/>

            <Button Content="Geometry"
                    Click="GeometryButton_Click"
                    Margin="5"
                    Padding="15,5"
                    Background="White"
                    Foreground="Black"/>
        </StackPanel>

        <!-- =================================
             ÁREA DONDE SE CARGAN LAS VISTAS
             ESTE ES TU ContentArea
        ================================= -->
        <ContentControl x:Name="ContentArea"
                        Grid.Row="1"
                        Margin="10"/>
    </Grid>
</Window>
